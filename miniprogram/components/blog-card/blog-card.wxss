page{
  background: #f1f1f1;
}
.blog{
  padding: 20rpx;
  background:#fff;
}
.blog-title{
  display: flex;
  align-items: center;
}
.blog-portrait{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right:20rpx;
}
.blog-box {
  flex: 1;
}
.blog-name{
  font-size: 32rpx;
}
.blog-time {
  padding-top: 8rpx;
  font-size: 24rpx;
  color: #939393;
}

.blog-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.blog-img {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.blog-img .img {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.blog-img .img:nth-child(3n) {
  margin-right: 0;
}