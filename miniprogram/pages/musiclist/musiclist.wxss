/* miniprogram/pages/musiclist/musiclist.wxss */
.detail-container{
  width:100%;
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}
.detail-mask{
  position: absolute;
  width: 100%;
  height:320rpx;
  background-color:#333;
  top:0;
  left:0;
  z-index:-1;
}
.detail-img{
  flex:0 0 280rpx;
  width:280rpx;
  height:280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}
.detail-info{
  display:flex;
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:320rpx;
  padding:20rpx;
  box-sizing: border-box;
  align-items: center;
}
.detail{
  color:#fff;
  font-size:24rpx;
  line-height:60rpx;
  flex:1;
}
.detail .detail-name{
  font-size: 36rpx;
  font-weight: 400;
}


